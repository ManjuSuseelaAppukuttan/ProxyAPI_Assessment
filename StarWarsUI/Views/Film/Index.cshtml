@model IEnumerable<StarWarsUI.Models.FilmViewModel>
@{
    Layout = "_Layout"; ViewBag.Title = "All Films";
}

<h2>Films</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Episode_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opening_crawl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rlease_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starships)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planets)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Episode_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opening_crawl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rlease_date)
                </td>
                <td>
                    @Html.ActionLink("Starship", "Starships", "Starship", new { item.Starships })
                </td>
                <td>
                    @Html.ActionLink("Planet", "Planet", "Planets", new { item.Planets })
                </td>
            </tr>
        }
    </tbody>
</table>
